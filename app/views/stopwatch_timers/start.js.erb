<% if params[:context] %>
  contextMenuHide();
<% else %>
  hideModal();
  $('#ajax-modal').html('<%= j render partial: 'new' %>');
  showModal('ajax-modal', '700px');
<% end %>

<% if @started_time_entry %>
    window.stopwatch.timerStarted(
      <%= raw Stopwatch::Timer.new(User.current).to_json %>
    );
<% else %>
  window.stopwatch.timerStopped();
<% end %>

